<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Truckdriverregister"
    android:background="@color/white">
<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="Truck Driver Sign up"
        android:textColor="@color/black"
        android:textSize="30sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >



    <EditText
        android:id="@+id/truckname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textwhite"
        android:drawableStart="@drawable/name"
        android:drawablePadding="10dp"
        android:fontFamily="@font/architects_daughter"
        android:hint="Name"
        android:inputType="text"

        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/truckphone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textwhite"
        android:drawableStart="@drawable/mobno"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/architects_daughter"
        android:hint="Mobile number"
        android:inputType="phone"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/truckemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textwhite"
            android:drawableStart="@drawable/mail"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/architects_daughter"
            android:hint="Email id"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/truckaddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textwhite"
        android:drawableStart="@drawable/add"
        android:drawablePadding="10dp"
        android:fontFamily="@font/architects_daughter"
        android:hint="Address"
        android:inputType="text"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:passwordToggleEnabled="true"
    android:textColorHint="@color/white">
    <EditText
        android:id="@+id/truckpass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textwhite"
        android:drawableStart="@drawable/pass"
        android:drawablePadding="10dp"
        android:fontFamily="@font/architects_daughter"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textColorHint="@color/white" /></com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/truckotp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/textwhite"
                android:fontFamily="@font/architects_daughter"
                android:hint="OTP"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="19sp" />

            <android.widget.Button
            android:id="@+id/truckotpbutton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textwhite"
            android:fontFamily="@font/audiowide"
            android:text="send OTP"
            android:textColor="@color/white"
            android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/truckreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/textwhite"
            android:fontFamily="@font/audiowide"
            android:text="sign up"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/trucklogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textwhite"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/audiowide"
        android:text="Have an account? SIGN IN"
        android:textColor="@color/white"
        android:textSize="19sp" />




</RelativeLayout>