<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userreportwaste"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:background="@drawable/backgroung" />
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--android:background="#8A000000"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/contributedescription"
            android:layout_width="380dp"
            android:layout_height="78dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/audiowide"
            android:hint="DESCRIPTION"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/wastetype"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:hint="TYPE OF WASTE"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/contributequantity"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:hint="QUANTITY"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp" />


        <android.widget.Button
            android:id="@+id/contributelocation"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/audiowide"
            android:background="@drawable/textwhite"
            android:text="MARK LOCATION"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contributelocationview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/contributesubmit"
            android:layout_width="171dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/textwhite"
            android:fontFamily="@font/audiowide"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="15sp"

            />
    </LinearLayout>

</RelativeLayout>