<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userreportwaste"
    android:background="@color/white"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginTop="60dp"
        >

        <EditText
            android:id="@+id/wastetype"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:hint="TYPE OF WASTE"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:background="@drawable/textwhite"
            android:drawablePadding="10dp"
            />


        <EditText
            android:id="@+id/reportquantity"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textwhite"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:hint="APPROXIMATE QUANTITY"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reportdescription"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textwhite"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"
            android:hint="DESCRIPTION"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="18sp"/>


        <android.widget.Button
            android:id="@+id/reportlocation"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textwhite"
            android:fontFamily="@font/audiowide"
            android:text="MARK LOCATION"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reportlocationview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />

        <Button
            android:id="@+id/reportsubmit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/textwhite"
            android:layout_marginTop="20dp"

            android:text="SUBMIT"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowide"
            android:textSize="15sp"


            />

    </LinearLayout>
</RelativeLayout>